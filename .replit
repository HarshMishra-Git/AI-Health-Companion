modules = ["nodejs-20", "web", "python-3.12"]
run = "python main.py"

[nix]
channel = "stable-24_05"
packages = ["ffmpeg-full", "freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[deployment]
run = ["sh", "-c", "gunicorn -w 4 -b 0.0.0.0:3000 --timeout 120 main:app"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 41704051
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[ports]]
localPort = 3000
externalPort = 80
